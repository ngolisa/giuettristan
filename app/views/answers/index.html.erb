<%= link_to('Logout', destroy_user_session_path, class: "btn-send", method: :delete) %>
<% if current_user.admin %>
<div class="container">
  <h1>Ceux qui ont répondus
    <% a = 0 %>
    <% @answers.each do |answer|  %>
    <% a += answer.number_of_invites %>
    <% end %>
  </h1>
  <h2>Nombre d'invités : <%= a %></h2>


  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nom</th>
        <th scope="col">👨‍👩‍👧‍👦</th>
        <th scope="col">🌲</th>
        <th scope="col">💒</th>
        <th scope="col">❌</th>
        <th scope="col">Petit mot 📋</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @answers.each do |answer| %>
      <tr>
        <th scope="row">
          <h5><strong> <%= answer.name %></strong> </h5
            <div>
              <%= answer.invite1 %>
            </div>
            <div>
              <%= answer.invite2 %>
            </div>
            <div>
              <%= answer.invite3 %>
            </div>
            <div>
              <%= answer.invite4 %>
            </div>
            <div>
              <%= answer.invite5 %>
            </div>
            <div>
              <%= answer.invite6 %>
            </div>



          </th>
          <td><%= answer.number_of_invites %></td>
          <td><%= answer.present ? "🌲" : "-" %></td>
          <td><%= answer.mairie ? "💒" : "-" %></td>
          <td><%= answer.absent ? "❌" : "-" %></td>
          <td><%= answer.comment %></td>
          <td>
          </td>
          <td><%= link_to "Edit", edit_answer_path(answer)%> <span>|</span>
            <%= link_to "Delete", answer_path(answer),
            method: :delete,
            data: { confirm: "Are you sure?" }, class:"btn-del" %> </td>
          </tr>
          <%end%>
        </tbody>
      </table>



    </div>
    <% end %>
